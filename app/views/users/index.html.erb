<% provide(:title, 'All users') %>
<h2>Organization Users</h2>

<%= link_to "Invite new user", new_invitation_path %>

<ul class="users">
    <% @users.each do |user| %>
        <li>
            <%= gravatar_for user %>
            <strong><%= user.name %></strong>, 
            <%= user.email %>
            (tasks : <%= user.tasks.count %>)
        </li>
    <% end %>
</ul>