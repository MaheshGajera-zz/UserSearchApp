<% provide(:title, 'Edit Task') %>
<h1>Create a New Task</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@task) do |t| %>
 		<%= render 'shared/error_messages' %>
      	
      	<%= t.label :title %>
      	<%= t.text_field :title %>

        <%= t.label :timing %>
        <div class="input-append span2 date-selects">
          <%= t.datetime_select :timing, class: "add-on" %>
        </div>

      	<%= t.label :description %>
      	<%= t.text_field :description %>
      	
      	<br/>
      	<%= t.submit "Save", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>