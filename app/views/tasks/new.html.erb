<% provide(:title, 'New Task') %>
<h1>Create a New Task</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@task) do |t| %>
 		<%= render 'shared/error_messages' %>
      	
      	<%= t.label :title %>
      	<%= t.text_field :title %>

        <%= t.label :timing %>
        <%= t.datetime_select :timing %>

      	<%= t.label :description %>
      	<%= t.text_field :description %>
      	
      	<br/>
      	<%= t.submit "Create", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
